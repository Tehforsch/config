set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no

# start a terminal
bindsym Mod1+2 exec i3-sensible-terminal

# kill focused window
bindsym Mod1+Q kill

# start dmenu (a program launcher)
bindsym Mod1+1 exec dmenu_run

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+p split v

# enter fullscreen mode for the focused container
bindsym Mod1+e fullscreen

# change container layout (stacked, tabbed, default)
# bindsym $mod+q layout stacking
# bindsym $mod+w layout tabbed
# bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable
for_window [title="Welcome to Wolfram Mathematica 9"] floating enable
for_window [title="Find and Replace"] floating enable
#for_window [class="Pidgin"] floating enable
for_window [class="Skype"] floating enable
for_window [class="Qalculate"] floating enable

# switch to workspace
bindsym $mod+a workspace 2
bindsym $mod+s workspace 4
bindsym $mod+d workspace 6
bindsym $mod+f workspace 8
bindsym $mod+g workspace 10
bindsym $mod+h workspace 12
bindsym $mod+less workspace 1
bindsym $mod+y workspace 3
bindsym $mod+x workspace 5
bindsym $mod+c workspace 7
bindsym $mod+v workspace 9
bindsym $mod+b workspace 11

# move focused container to workspace
bindsym $mod+Shift+a move workspace 2; workspace 2
bindsym $mod+Shift+s move workspace 4; workspace 4
bindsym $mod+Shift+d move workspace 6; workspace 6
bindsym $mod+Shift+f move workspace 8; workspace 8
bindsym $mod+Shift+g move workspace 10; workspace 10
bindsym $mod+Shift+h move workspace 12; workspace 12
bindsym $mod+Shift+less move workspace 1; workspace 1
bindsym $mod+Shift+y move workspace 3; workspace 3
bindsym $mod+Shift+x move workspace 5; workspace 5
bindsym $mod+Shift+c move workspace 7; workspace 7
bindsym $mod+Shift+v move workspace 9; workspace 9
bindsym $mod+Shift+b move workspace 11; workspace 11

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode
# They resize the border in the direction you pressed, e.g.
# when pressing left, the window is resized so that it has
# more space on its left

bindsym h resize grow left 10 px or 10 ppt
bindsym Shift+H resize shrink   left 10 px or 10 ppt

bindsym j resize grow down 10 px or 10 ppt
bindsym Shift+J resize shrink   down 10 px or 10 ppt

bindsym k resize grow up 10 px or 10 ppt
bindsym Shift+K resize shrink   up 10 px or 10 ppt

bindsym l resize grow right 10 px or 10 ppt
bindsym Shift+L resize shrink   right 10 px or 10 ppt

# back to normal: Escape
bindsym Escape mode "default"
}

bindsym Mod1+asciicircum mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
}

#Disable window titles
new_window 1pixel

# Shortcuts to open specific applications
bindsym Mod1+Shift+x exec nautilus --no-desktop
bindsym Mod1+Shift+s exec google-chrome
bindsym Mod1+Shift+w exec google-chrome web.whatsapp.com
bindsym Mod1+Shift+m exec google-chrome mail.google.com
# Telegram
bindsym Mod1+Shift+t exec google-chrome --app-id=clhhggbfdinjmjhajaheehoeibfljjno


bindsym Mod1+Shift+o exec bash ~/.usrconfig/startupScripts/runAll.sh

# Volume changing hotkeys
bindsym Ctrl+Shift+R exec --no-startup-id /home/toni/.usrconfig/scripts/changeVolume.sh 1

# use windows as mod
set $mod Mod4

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Set background to black
exec --no-startup-id xsetroot -solid "#000000"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no

# start a terminal
bindsym Mod1+2 exec gnome-terminal

# kill focused window
bindsym Mod1+Q kill

# start dmenu (a program launcher)
bindsym Mod1+1 exec dmenu_run

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+p split v

# enter fullscreen mode for the focused container
bindsym Mod1+e fullscreen

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable
for_window [title="Welcome to Wolfram Mathematica 9"] floating enable
for_window [title="Find and Replace"] floating enable

# set workspace names (latter number is the sorting)
set $ws1 "1:1"
set $ws2 "6:2"
set $ws3 "2:3"
set $ws4 "7:4"
set $ws5 "3:5"
set $ws6 "8:6"
set $ws7 "4:7"
set $ws8 "9:8"
set $ws9 "5:9"
set $ws10 "10:10"
set $ws11 "6:11"
set $ws12 "11:12"

# switch to workspace
bindsym $mod+a workspace $ws2
bindsym $mod+s workspace $ws4
bindsym $mod+d workspace $ws6
bindsym $mod+f workspace $ws8
bindsym $mod+g workspace $ws10
bindsym $mod+h workspace $ws12
bindsym $mod+less workspace $ws1
bindsym $mod+y workspace $ws3
bindsym $mod+x workspace $ws5
bindsym $mod+c workspace $ws7
bindsym $mod+v workspace $ws9
bindsym $mod+b workspace $ws11

# move focused container to workspace
bindsym $mod+Shift+a move workspace $ws2; workspace $ws2
bindsym $mod+Shift+s move workspace $ws4; workspace $ws4
bindsym $mod+Shift+d move workspace $ws6; workspace $ws6
bindsym $mod+Shift+f move workspace $ws8; workspace $ws8
bindsym $mod+Shift+g move workspace $ws10; workspace $ws10
bindsym $mod+Shift+h move workspace $ws12; workspace $ws12
bindsym $mod+Shift+less move workspace $ws1; workspace $ws1
bindsym $mod+Shift+y move workspace $ws3; workspace $ws3
bindsym $mod+Shift+x move workspace $ws5; workspace $ws5
bindsym $mod+Shift+c move workspace $ws7; workspace $ws7
bindsym $mod+Shift+v move workspace $ws9; workspace $ws9
bindsym $mod+Shift+b move workspace $ws11; workspace $ws11

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit
# lock screen
bindsym $mod+Shift+L exec i3lock -c 000000

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode
# They resize the border in the direction you pressed, e.g.
# when pressing left, the window is resized so that it has
# more space on its left

bindsym h resize grow left 10 px or 10 ppt
bindsym Shift+H resize shrink   left 10 px or 10 ppt

bindsym j resize grow down 10 px or 10 ppt
bindsym Shift+J resize shrink   down 10 px or 10 ppt

bindsym k resize grow up 10 px or 10 ppt
bindsym Shift+K resize shrink   up 10 px or 10 ppt

bindsym l resize grow right 10 px or 10 ppt
bindsym Shift+L resize shrink   right 10 px or 10 ppt

# back to normal: Escape
bindsym Escape mode "default"
}

bindsym Mod1+asciicircum mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    strip_workspace_numbers yes
    status_command i3status
}

#Disable window titles
new_window 1pixel

# Shortcuts to open specific applications
bindsym Mod1+Shift+x exec nautilus --no-desktop
bindsym Mod1+Shift+s exec /home/toni/projects/config/scripts/startChrome.sh
bindsym Mod1+Shift+w exec google-chrome web.whatsapp.com
bindsym Mod1+Shift+m exec google-chrome mail.google.com
# Telegram
bindsym Mod1+Shift+t exec /home/toni/.apps/Telegram/Telegram


bindsym Mod1+Shift+o exec zsh /home/toni/projects/config/startupScripts/runAll.sh

# Volume changing hotkeys
bindsym Ctrl+Shift+R exec --no-startup-id /home/toni/projects/config/scripts/changeVolume.sh 1
bindsym Ctrl+Shift+F exec --no-startup-id /home/toni/projects/config/scripts/changeVolume.sh 0
# Brightness changing hotkeys
bindsym Ctrl+Shift+B exec --no-startup-id /home/toni/projects/config/scripts/changeBrightness.sh 0

# Spotify controls
bindsym Ctrl+Shift+S exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym Ctrl+Shift+A exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym Ctrl+Shift+D exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# Assign workspaces to monitors.
workspace $ws1 output eDP-1
workspace $ws2 output DP-2
workspace $ws3 output eDP-1
workspace $ws4 output DP-2
workspace $ws5 output eDP-1
workspace $ws6 output DP-2
workspace $ws7 output eDP-1
workspace $ws8 output DP-2
workspace $ws9 output eDP-1
workspace $ws10 output DP-2

# Assign specific workspaces to some applications
for_window [class="Spotify"] move to workspace 9

# Startup
exec --no-startup-id /usr/bin/nm-applet # network applet
exec --no-startup-id ~/.dropbox-dist/dropboxd
exec --no-startup-id spotify
exec --no-startup-id /opt/urserver/urserver --daemon
exec_always --no-startup-id sleep 3 && /home/toni/projects/config/startupScripts/runAll.sh
exec_always --no-startup-id sleep 3 && redshift-gtk
 
# Disable mouse jumping to the a window when I switch focus between two workspaces
mouse_warping none

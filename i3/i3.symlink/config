# Paths
set $config ~/projects/config
set $scripts ~/projects/config/scripts
set $startupScripts ~/projects/config/startupScripts
set $i3contexts python3 ~/projects/i3Contexts/switch.py

# MISC
# Change font
font pango: Dejavu Sans Mono 12

# use windows as mod
set $mod Mod4

# Set background to black
exec --no-startup-id xsetroot -solid "#000000"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no

# kill focused window
bindsym Mod1+Q kill

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# move focused window to scratchpad (mainly for terminals that i dont care about anymore but they have something running in them and i'm too lazy to press ctrl-z ctrl-f)
bindsym Mod1+Shift+u move scratchpad
# also have a hotkey to restore them in case its ever necessary
bindsym Mod1+Shift+i scratchpad show; floating disable

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+p split v

# toggle split / tab mode
bindsym Mod1+e layout toggle splith tabbed

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable

# WORKSPACES

# Context switching hotkeys
bindsym $mod+q exec $i3contexts context 0
bindsym $mod+w exec $i3contexts context 1
bindsym $mod+e exec $i3contexts context 2
bindsym $mod+r exec $i3contexts context 3
bindsym $mod+t exec $i3contexts context 4
bindsym F1 exec $i3contexts context 0
bindsym F2 exec $i3contexts context 1
bindsym F3 exec $i3contexts context 2
bindsym F4 exec $i3contexts context 3
bindsym F5 exec $i3contexts context 4

bindsym $mod+Shift+q exec $i3contexts context --move 0
bindsym $mod+Shift+w exec $i3contexts context --move 1
bindsym $mod+Shift+e exec $i3contexts context --move 2
bindsym $mod+Shift+r exec $i3contexts context --move 3
bindsym $mod+Shift+t exec $i3contexts context --move 4
bindsym Shift+F1 exec $i3contexts context --move 0
bindsym Shift+F2 exec $i3contexts context --move 1
bindsym Shift+F3 exec $i3contexts context --move 2
bindsym Shift+F4 exec $i3contexts context --move 3
bindsym Shift+F5 exec $i3contexts context --move 4

# Workspace switching hotkeys
bindsym $mod+a exec $i3contexts workspace 2
bindsym $mod+s exec $i3contexts workspace 4
bindsym $mod+d exec $i3contexts workspace 6
bindsym $mod+f exec $i3contexts workspace 8
bindsym $mod+g exec $i3contexts workspace 10
bindsym $mod+less exec $i3contexts workspace 1
bindsym $mod+y exec $i3contexts workspace 3
bindsym $mod+x exec $i3contexts workspace 5

# move focused container to workspace
bindsym $mod+Shift+a exec $i3contexts workspace --move 2
bindsym $mod+Shift+s exec $i3contexts workspace --move 4
bindsym $mod+Shift+d exec $i3contexts workspace --move 6
bindsym $mod+Shift+f exec $i3contexts workspace --move 8
bindsym $mod+Shift+g exec $i3contexts workspace --move 10
bindsym $mod+Shift+less exec $i3contexts workspace --move 1
bindsym $mod+Shift+y exec $i3contexts workspace --move 3
bindsym $mod+Shift+x exec $i3contexts workspace --move 5

# shared workspaces
bindsym $mod+v exec $i3contexts workspace music
bindsym $mod+c exec $i3contexts workspace chat
bindsym $mod+b exec $i3contexts workspace todo
bindsym $mod+m exec $i3contexts workspace mail

bindsym $mod+Shift+v exec $i3contexts workspace --move music
bindsym $mod+Shift+c exec $i3contexts workspace --move chat
bindsym $mod+Shift+b exec $i3contexts workspace --move todo
bindsym $mod+Shift+m exec $i3contexts workspace --move mail

# Move workspaces between monitors
bindsym $mod+space move workspace to output left

# Assign workspaces to monitors.
workspace $w output eDP-1 eDP1
workspace $ws1_2 output DP-1-3 HDMI1

# Change colors
# class                 border  backgr. text    indicator child_border                                                                     
# client.focused_inactive #002b36 #073642 #d9d9d9 #424242 #063340                                                                            
client.unfocused        #073642 #073642 #586e75 #424242 #063340                                                                            
client.focused          #93a1a1 #93a1a1 #fdf6e3 #aaaaaa #aaaaaa   

# resize window (you can also use the mouse for that)
mode "resize" {
# These bindings trigger as soon as you enter the resize mode
# They resize the border in the direction you pressed, e.g.
# when pressing left, the window is resized so that it has
# more space on its left

bindsym h resize grow left 10 px or 10 ppt
bindsym Shift+H resize shrink   left 10 px or 10 ppt

bindsym j resize grow down 10 px or 10 ppt
bindsym Shift+J resize shrink   down 10 px or 10 ppt

bindsym k resize grow up 10 px or 10 ppt
bindsym Shift+K resize shrink   up 10 px or 10 ppt

bindsym l resize grow right 10 px or 10 ppt
bindsym Shift+L resize shrink   right 10 px or 10 ppt

# back to normal: Escape
bindsym Escape mode "default"
}

bindsym Mod1+o mode "resize"

# Main monitor bar
bar {
    output primary
    output HDMI1
    output DP-1-3
    strip_workspace_numbers yes
    status_command i3status
    status_command i3blocks
}

# Second monitor bar
bar {
    output eDP1
    output eDP-1
    strip_workspace_numbers yes
    status_command i3status
}

#Disable window titles
new_window 1pixel
for_window [class="^.*"] border pixel 3

# Shortcuts to Open Applications
# Open application launch mode.
set $launch Launch: [a]nki [c]hrome [k]illTimers [n]autilus [t]elegram [z]otero t[o]doist [l]ockscreen [shift+r]estart [shift+e]xit [s]any other
bindsym Mod1+s mode "$launch"

mode "$launch" {
    # start dmenu (a program launcher)
    bindsym a exec ~/.bin/anki; mode "default"
    bindsym c exec $scripts/startChrome.sh; mode "default"
    bindsym o exec $scripts/startChrome.sh --new-window todoist.com; mode "default"
    bindsym o exec $scripts/startChrome.sh --new-window mail.google.com; mode "default"
    bindsym k exec $scripts/timer/killTimers.sh; mode "default"
    bindsym n exec nautilus --no-desktop; mode "default"
    bindsym s exec --no-startup-id dmenu_run -fn xft:Inconsolata-12; mode "default"
    bindsym t exec /home/toni/.apps/Telegram/Telegram; mode "default"
    bindsym z exec /home/toni/.apps/Zotero_linux-x86_64/zotero; mode "default"
    bindsym l exec i3lock -c 000000; mode "default"
    bindsym Shift+R restart; mode "default"
    bindsym Shift+E exit; mode "default"

    bindsym Escape mode "default"
}

# start a terminal. since on some systems terminator doesnt work and having multiple
# i3 configs is basically suicide, i put this here
# and then just put whatever terminal i want to open in ~/.bin/terminal.
# Not nice but it works
bindsym Mod1+w exec ~/.bin/terminal

# Reload monitors script and xmodmap. This is necessary when the power goes out for a second and my usb hub separates the keyboard from the computer, resetting the xmodmap :D
bindsym Mod1+Shift+o exec zsh $startupScripts/runAll.sh

# Volume changing hotkeys
bindsym Ctrl+Shift+R exec --no-startup-id $scripts/changeVolume.sh 1
bindsym Ctrl+Shift+F exec --no-startup-id $scripts/changeVolume.sh 0
# Brightness changing hotkeys
bindsym Ctrl+Shift+B exec --no-startup-id $scripts/changeBrightness.sh 0

# Spotify controls
bindsym Ctrl+Shift+S exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym Ctrl+Shift+A exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym Ctrl+Shift+D exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# Startup
exec --no-startup-id /usr/bin/nm-applet # network applet
exec --no-startup-id ~/.dropbox-dist/dropboxd
exec --no-startup-id pulseaudio --start
exec --no-startup-id /opt/urserver/urserver --daemon
exec_always --no-startup-id sleep 3 && $startupScripts/runAll.sh
exec --no-startup-id sleep 3 && redshift-gtk
exec --no-startup-id i3-msg 'workspace 0:chat; exec /home/toni/.apps/Telegram/Telegram'
exec --no-startup-id i3-msg 'workspace 1:music; exec spotify'
exec --no-startup-id i3-msg 'workspace 2:todo; $scripts/startChrome.sh --new-window todoist.com'
exec --no-startup-id i3-msg 'workspace 3:mail; exec $scripts/startChrome.sh --new-window mail.google.com; exec thunderbird'

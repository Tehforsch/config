# Paths
set $config ~/projects/config
set $scripts ~/projects/config/scripts
set $startupScripts ~/projects/config/startupScripts

# Change font
font pango: Dejavu Sans Mono 10

# use windows as mod
set $mod Mod4

# Set background to black
exec --no-startup-id xsetroot -solid "#000000"

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no

# kill focused window
bindsym Mod1+Q kill

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

bindsym Mod1+1 exec $scripts/focusNthWindow.py -n 1
bindsym Mod1+2 exec $scripts/focusNthWindow.py -n 2
bindsym Mod1+3 exec $scripts/focusNthWindow.py -n 3
bindsym Mod1+4 exec $scripts/focusNthWindow.py -n 4
bindsym Mod1+5 exec $scripts/focusNthWindow.py -n 5

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# move focused window to scratchpad (mainly for terminals that i dont care about anymore but they have something running in them and i'm too lazy to press ctrl-z ctrl-f)
bindsym Mod1+Shift+u move scratchpad
# also have a hotkey to restore them in case its ever necessary
bindsym Mod1+Shift+i scratchpad show; floating disable

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+p split v

# toggle split / tab mode
bindsym Mod1+e layout toggle splith tabbed

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable

# set workspace names (latter number is the sorting)
set $ws1_1 "1:w1"
set $ws1_2 "2:w2"
set $ws1_3 "3:w3"
set $ws1_4 "4:w4"
set $ws1_5 "5:w5"
set $ws1_6 "6:w6"
set $ws1_7 "7:w7"
set $ws1_8 "8:w8"
set $ws1_9 "9:w9"
set $ws1_10 "10:w10"
set $ws1_11 "11:w11"
set $ws1_12 "12:w12"

# set workspace names (latter number is the sorting)
set $ws2_1 "1:p1"
set $ws2_2 "2:p2"
set $ws2_3 "3:p3"
set $ws2_4 "4:p4"
set $ws2_5 "5:p5"
set $ws2_6 "6:p6"
set $ws2_7 "7:p7"
set $ws2_8 "8:p8"
set $ws2_9 "9:p9"
set $ws2_10 "10:p10"
set $ws2_11 "11:p11"
set $ws2_12 "12:p12"


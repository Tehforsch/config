# Paths
set $config ~/projects/config
set $scripts ~/projects/config/scripts
set $startupScripts ~/projects/config/startupScripts

set $bg #000000
set $activeBg #000000
set $activeFont #fdf6e3
set $activeBorder #fdf6e3
set $inactiveBg #000000
set $inactiveFont #839496
set $activeWindowBorder #839496

# MISC
# Change font
font pango: Dejavu Sans Mono 12

# use windows as mod
set $mod Mod4

# Set background to black
exec --no-startup-id xsetroot -solid $inactiveBg

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no
mouse_warping none

# kill focused window
bindsym Mod1+Q kill

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
# bindsym $mod+p split v

# toggle split / tab mode
bindsym Mod1+e layout toggle splith tabbed

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable

# WORKSPACES

# Workspace switching hotkeys
bindsym $mod+a workspace 1:a
bindsym $mod+s workspace 2:s
bindsym $mod+d workspace 3:d
bindsym $mod+f workspace 4:f
bindsym $mod+g workspace 5:g
bindsym $mod+less workspace 12:<
bindsym $mod+y workspace 13:y
bindsym $mod+x workspace 14:x

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace 1:a; workspace 1:a
bindsym $mod+Shift+s move container to workspace 2:s; workspace 2:s
bindsym $mod+Shift+d move container to workspace 3:d; workspace 3:d
bindsym $mod+Shift+f move container to workspace 4:f; workspace 4:f
bindsym $mod+Shift+g move container to workspace 5:g; workspace 5:g
bindsym $mod+Shift+less move container to workspace 12:<; workspace 12:<
bindsym $mod+Shift+y move container to workspace 13:y; workspace 13:y
bindsym $mod+Shift+x move container to workspace 14:x; workspace 14:x

# shared workspaces
bindsym $mod+v workspace 6:music
bindsym $mod+c workspace 7:chat
bindsym $mod+b workspace 8:todo
bindsym $mod+n workspace 9:notes
bindsym $mod+m workspace 10:mail
bindsym $mod+z workspace 11:zotero

bindsym $mod+Shift+v move container to workspace 6:music; workspace 6:music
bindsym $mod+Shift+c move container to workspace 7:chat; workspace 7:chat
bindsym $mod+Shift+b move container to workspace 8:todo; workspace 8:todo
bindsym $mod+Shift+n move container to workspace 9:notes; workspace 9:notes
bindsym $mod+Shift+m move container to workspace 10:mail; workspace 10:mail
bindsym $mod+Shift+z move container to workspace 11:zotero; workspace 11:zotero

# Move workspaces between monitors
bindsym $mod+h move workspace to output left
bindsym $mod+l move workspace to output right

bindsym Mod1+o mode "resize"
mode "resize" {
    bindsym h resize grow left 10 px or 10 ppt
    bindsym Shift+H resize shrink   left 10 px or 10 ppt

    bindsym j resize grow down 10 px or 10 ppt
    bindsym Shift+J resize shrink   down 10 px or 10 ppt

    bindsym k resize grow up 10 px or 10 ppt
    bindsym Shift+K resize shrink   up 10 px or 10 ppt

    bindsym l resize grow right 10 px or 10 ppt
    bindsym Shift+L resize shrink   right 10 px or 10 ppt

    bindsym Escape mode "default"
}

# Shortcuts to Open Applications
# Open application launch mode.
set $launch Launch: t[o]doist, [E]xit, [O]pen programs, [M]ount cluster
bindsym Mod1+s mode "$launch"

mode "$launch" {
    # start dmenu (a program launcher)
    bindsym a exec ~/.bin/anki; mode "default"
    bindsym c exec firefox; mode "default"
    bindsym e exec ~/projects/config/scripts/startEmacs.sh; mode "default"
    bindsym k exec $scripts/timer/killTimers.sh; mode "default"
    bindsym l exec i3lock -c 000000; mode "default"
    bindsym m exec firefox --new-window mail.google.com; mode "default"
    bindsym n exec pcmanfm --no-desktop; mode "default"
    bindsym o exec firefox --new-window todoist.com; mode "default"
    bindsym s exec --no-startup-id dmenu_run -fn xft:inconsolata-12; mode "default"
    bindsym t exec telegram-desktop; mode "default"
    bindsym w exec firefox --new-window web.whatsapp.com; mode "default"
    bindsym z exec /home/toni/.apps/Zotero_linux-x86_64/zotero; exec rmdir ~/Desktop; mode "default"
    bindsym Shift+O exec bash $startupScripts/openProgramsAtStartOfSession.sh; mode "default"
    bindsym shift+r restart; mode "default"
    bindsym Shift+E exit; mode "default"
    bindsym Shift+M exec $scripts/mountClusterSshfs.sh; mode "default"

    bindsym Escape mode "default"
}

client.focused_inactive    $inactiveFont   $inactiveBg            $inactiveFont
client.unfocused           $inactiveFont   $inactiveBg            $inactiveFont
client.focused             $activeFont     $activeWindowBorder    $activeFont
client.urgent              $activeFont     $activeWindowBorder    $activeFont

bar {
	colors {
		background $bg
		statusline #ffffff
		separator  $activeFont
		focused_workspace $activeBg $activeBg $activeFont
		active_workspace  $activeBg $activeBg $activeFont
		inactive_workspace $inactiveBg $inactiveBg $inactiveFont
		urgent_workspace  $activeBg $activeBg $activeFont
	}
    output primary
    output HDMI-1
    output DP-2
    strip_workspace_numbers yes
    status_command i3status
    status_command i3blocks
}

# Second monitor bar
bar {
	colors {
		background $bg
		statusline #ffffff
		separator  $activeFont
		focused_workspace $activeBg $activeBg $activeFont
		active_workspace  $activeBg $activeBg $activeFont
		inactive_workspace $inactiveBg $inactiveBg $inactiveFont
		urgent_workspace  $activeBg $activeBg $activeFont
	}
    output eDP1
    output eDP-1
    output DP-1-3
    strip_workspace_numbers yes
}

#Disable window titles
new_window 1pixel
for_window [class="^.*"] border pixel 1

# start a terminal. since on some systems terminator doesnt work and having multiple
# i3 configs is basically suicide, i put this here
# and then just put whatever terminal i want to open in ~/.bin/terminal.
# Not nice but it works
bindsym Mod1+w exec ~/.bin/terminal

# Reload monitors script and xmodmap. This is necessary when the power goes out for a second and my usb hub separates the keyboard from the computer, resetting the xmodmap :D
bindsym Mod1+Shift+o exec --no-startup-id zsh $startupScripts/runAll.sh

# Volume changing hotkeys
bindsym Ctrl+Shift+R exec --no-startup-id $scripts/changeVolume.sh 1
bindsym Ctrl+Shift+F exec --no-startup-id $scripts/changeVolume.sh 0
# Brightness changing hotkeys
bindsym Ctrl+Shift+B exec --no-startup-id $scripts/changeBrightness.sh 0

# Music controls
bindsym Ctrl+Shift+S exec "mpc toggle"
bindsym Ctrl+Shift+A exec "mpc prev"
bindsym Ctrl+Shift+D exec "mpc next"

# workspace "1:a" output DP-2
# workspace "2:s" output DP-2
# workspace "3:d" output DP-2
# workspace "4:f" output DP-2
# workspace "5:g" output DP-2
# workspace "5:g" output DP-1-3
# workspace "12:<" output eDP1
# workspace "13:y" output eDP1
# workspace "14:x" output eDP1
# workspace "12:<" output eDP-1
# workspace "13:y" output eDP-1
# workspace "14:x" output eDP-1
# workspace "1:a" output HDMI-1

# Startup
exec_always --no-startup-id sleep 3 && $startupScripts/runAll.sh
exec --no-startup-id /usr/bin/nm-applet # network applet
exec --no-startup-id seafile-applet
exec --no-startup-id pulseaudio --start
exec --no-startup-id /opt/urserver/urserver --daemon
exec --no-startup-id sleep 3 && redshift-gtk
exec --no-startup-id mpd
exec --no-startup-id xbacklight -set 100
# exec --no-startup-id $startupScripts/openProgramsAtStartOfSession.sh

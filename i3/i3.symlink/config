# Paths
set $config ~/projects/config
set $scripts ~/projects/config/scripts

set $mod Mod4

set $bg #1d2021
set $activeBg #282828
set $activeFont #ebdbb2
set $activeBorder #ebdbb2
set $inactiveBg #1d2021
set $inactiveFont #928374
set $activeWindowBorder #928374

font pango: Dejavu Sans Mono 12

client.focused_inactive    $inactiveFont   $inactiveBg            $inactiveFont
client.unfocused           $inactiveFont   $inactiveBg            $inactiveFont
client.focused             $activeFont     $activeWindowBorder    $activeFont
client.urgent              $activeFont     $activeWindowBorder    $activeFont

bar {
	colors {
		background $bg
		statusline #ffffff
		separator  $activeFont
		focused_workspace $activeBg $activeBg $activeFont
		active_workspace  $activeBg $activeBg $activeFont
		inactive_workspace $inactiveBg $inactiveBg $inactiveFont
		urgent_workspace  $activeBg $activeBg $activeFont
	}
    output primary
    output HDMI-1
    output DP-2
    output eDP1
    output eDP-1
    output DP-1-3
    strip_workspace_numbers yes
    status_command i3status
}

#Disable window titles
new_window 1pixel
for_window [class="^.*"] border pixel 1

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no
focus_wrapping no
mouse_warping none

# kill focused window
bindsym Mod1+Q kill
bindsym $mod+Q kill

# change focus
# bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
# bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right
bindsym Mod1+Shift+a move left
bindsym Mod1+Shift+d move right

# toggle split / tab mode
bindsym Mod1+e layout toggle splith tabbed
bindsym $mod+e layout toggle splith tabbed

# Workspace switching hotkeys
bindsym $mod+a workspace 1:a
bindsym $mod+s workspace 2:s
bindsym $mod+d workspace 3:d
bindsym $mod+f workspace 4:f
bindsym $mod+g workspace 5:g
bindsym $mod+less workspace 12:video
bindsym $mod+y workspace 13:y
bindsym $mod+x workspace 14:x
bindsym $mod+t workspace 15:stream

# move focused container to workspace
bindsym $mod+Shift+a move container to workspace 1:a; workspace 1:a
bindsym $mod+Shift+s move container to workspace 2:s; workspace 2:s
bindsym $mod+Shift+d move container to workspace 3:d; workspace 3:d
bindsym $mod+Shift+f move container to workspace 4:f; workspace 4:f
bindsym $mod+Shift+g move container to workspace 5:g; workspace 5:g
bindsym $mod+Shift+less move container to workspace 12:video; workspace 12:video
bindsym $mod+Shift+y move container to workspace 13:y; workspace 13:y
bindsym $mod+Shift+x move container to workspace 14:x; workspace 14:x
bindsym $mod+Shift+t move container to workspace 15:stream; workspace 15:stream

# shared workspaces
bindsym $mod+c workspace 6:chat
bindsym $mod+v workspace 7:music
bindsym $mod+b workspace 8:todo
bindsym $mod+n workspace 9:notes
bindsym $mod+m workspace 10:mail
bindsym $mod+z workspace 11:zotero

bindsym $mod+Shift+c move container to workspace 6:chat; workspace 6:chat
bindsym $mod+Shift+v move container to workspace 7:music; workspace 7:music
bindsym $mod+Shift+b move container to workspace 8:todo; workspace 8:todo
bindsym $mod+Shift+n move container to workspace 9:notes; workspace 9:notes
bindsym $mod+Shift+m move container to workspace 10:mail; workspace 10:mail
bindsym $mod+Shift+z move container to workspace 11:zotero; workspace 11:zotero

bindsym $mod+Shift+p move scratchpad
bindsym $mod+p scratchpad show

bindsym $mod+h move workspace to output left
bindsym $mod+l move workspace to output right

bindsym $mod+asciicircum workspace back_and_forth

# Various launch buttons 
bindsym Mod1+Tab exec rofi -show window
bindsym Mod1+o mode "resize"
bindsym Mod1+s mode "$launch"
bindsym Mod1+w exec kitty
bindsym Mod1+y mode "$media"
bindsym Mod1+p mode "$layout"
bindsym F12 workspace "100:steam"; mode "$game"; exec $scripts/preGameHook.sh
bindsym Shift+F12 move workspace "100:steam"

set $layout Layout [t]oggle float, split [h]orizontal, [v]ertical
mode "$layout" {
    bindsym a move container to workspace 1:a
    bindsym s move container to workspace 2:s
    bindsym d move container to workspace 3:d
    bindsym f move container to workspace 4:f
    bindsym g move container to workspace 5:g
    bindsym less move container to workspace 12:video
    bindsym t move container to workspace 15:stream
    bindsym y move container to workspace 13:y
    bindsym x move container to workspace 14:x
    bindsym c move container to workspace 6:chat
    bindsym v move container to workspace 7:music
    bindsym b move container to workspace 8:todo
    bindsym n move container to workspace 9:notes
    bindsym m move container to workspace 10:mail
    bindsym z move container to workspace 11:zotero
    bindsym t floating toggle
    bindsym h split h; mode "default"
    bindsym v split v; mode "default"
    bindsym Escape mode "default";
}

mode "resize" {
    bindsym h resize grow left 10 px or 10 ppt
    bindsym Shift+H resize shrink   left 10 px or 10 ppt
    bindsym j resize grow down 10 px or 10 ppt
    bindsym Shift+J resize shrink   down 10 px or 10 ppt
    bindsym k resize grow up 10 px or 10 ppt
    bindsym Shift+K resize shrink   up 10 px or 10 ppt
    bindsym l resize grow right 10 px or 10 ppt
    bindsym Shift+L resize shrink   right 10 px or 10 ppt
    bindsym Escape mode "default"
}

set $launch Launch: mount cluster [I], run startup [C]onfig [Q]uit i3 [A]nki [S]creenshot
mode "$launch" {
    bindsym a exec emacsclient -c -n -e '(progn (setq org-agenda-window-setup (quote current-window)) (my-daily-agenda))'; mode "default"
    bindsym b exec kitty "ncmpcpp"; mode default
    bindsym c exec firefox; mode "default"
    bindsym d mode "$document"
    bindsym e exec emacsclient -c -n; mode "default"
    bindsym g mode "$gameLaunch"
    bindsym k exec $scripts/keyboardConfiguration.sh toggle; mode "default"
    bindsym l exec i3lock -c 000000; mode "default"
    bindsym m exec firefox --new-window mail.google.com; mode "default"
    bindsym n exec pcmanfm --no-desktop; mode "default"
    bindsym o exec firefox --new-window todoist.com; mode "default"
    bindsym s exec rofi -show run; mode "default"
    bindsym t exec telegram-desktop; mode "default"
    bindsym w exec firefox --new-window web.whatsapp.com; mode "default"
    bindsym z exec zotero; exec rmdir ~/Desktop; mode "default"
    bindsym Shift+A exec anki; mode "default"
    bindsym Shift+C exec bash $scripts/startup.sh; mode "default"
    bindsym Shift+D exec $scripts/runDiscord.sh; mode "default"
    bindsym Shift+E exec emacsclient -c -n -e '(switch-to-buffer nil)'; mode "default"
    bindsym Shift+I exec $scripts/mountClusterSshfs.sh; mode "default"
    bindsym shift+M exec thunderbird; mode "default"
    bindsym Shift+O exec bash $scripts/openProgramsAtStartOfSession.sh; mode "default"
    bindsym Shift+Q exit; mode "default"
    bindsym shift+R restart; mode "default"
    bindsym --release Shift+S exec bash $scripts/takeScreenshot.sh; mode "default"
    bindsym Escape mode "default"
}

set $document Open: [p]dfs/epubs [i]mages
mode "$document" {
    bindsym d exec $scripts/openLastTouchedFileInDir.sh ~/downloads; mode "default"
    bindsym i exec $scripts/rofiFile.sh gpicview png jpg jpeg gif; mode "default"
    bindsym p exec $scripts/rofiFile.sh zathura pdf epub; mode "default"
    bindsym Escape mode "default"
}

# Game settings
set $gameLaunch [d]ota, [c]s, [s]tranded deep
mode "$gameLaunch" {
    bindsym d exec steam steam://rungameid/570; mode "default"
    bindsym c exec steam steam://rungameid/730; mode "default"
    bindsym Escape mode "default"
}

set $game Game mode. F12: Exit, Win+p: Record Screen, Win+P: stop recording
mode "$game" {
    bindsym F12 workspace back_and_forth; mode "default"; exec $scripts/postGameHook.sh
    bindsym $mod+p; exec $scripts/screenCapture.sh
    bindsym $mod+Shift+p; exec $scripts/screenCapture.sh 1
}

set $media Media: [b]lack, [m]usic, [n]ew music, [o]:streams
mode "$media" {
    bindsym Escape mode "default"
    bindsym a exec "mpc prev"
    bindsym b exec --no-startup-id $scripts/changeBrightness.sh 0; mode "default"
    bindsym d exec "mpc next"
    bindsym f exec --no-startup-id $scripts/changeVolume.sh 0
    bindsym g exec --no-startup-id $scripts/changeBrightness.sh -1
    bindsym l exec kitty "lyvi"; mode "default"
    bindsym o exec --no-startup-id $scripts/streamlink.sh; mode "default"
    bindsym n mode "$findNewMusic"
    bindsym m mode "$findMusic"
    bindsym r exec --no-startup-id $scripts/changeVolume.sh 1
    bindsym s exec "mpc toggle"; mode "default"
    bindsym t exec --no-startup-id $scripts/changeBrightness.sh 1
    bindsym y mode "default"
    bindsym m exec --no-startup-id $scripts/streamlink.sh
    bindsym Shift+F exec --no-startup-id mpc volume -5
    bindsym Shift+R exec --no-startup-id mpc volume +5
}

set $findMusic [k]: artist, [a]lbum, [s]ong, [r]andom album, 
mode "$findMusic" {
    bindsym k exec bash $scripts/musicSelection/artist.sh; mode "default"
    bindsym a exec bash $scripts/musicSelection/album.sh; mode "default"
    bindsym s exec bash $scripts/musicSelection/song.sh; mode "default"
    bindsym r exec bash $scripts/musicSelection/randomAlbum.sh
    bindsym t exec bash $scripts/musicSelection/newSongThisAlbum.sh; mode "default"
    bindsym Escape mode "default"
}
set $findNewMusic NEW MUSIC: [k]: artist, [a]lbum, [s]ong, [r]andom album, remove [Q]uarantine status
mode "$findNewMusic" {
    bindsym k exec bash $scripts/musicSelection/artist.sh --genre quarantine; mode "default"
    bindsym a exec bash $scripts/musicSelection/album.sh --genre quarantine; mode "default"
    bindsym s exec bash $scripts/musicSelection/song.sh --genre quarantine; mode "default"
    bindsym r exec bash $scripts/musicSelection/randomAlbum.sh --genre quarantine
    bindsym Shift+Q exec bash $scripts/musicSelection/removeQuarantineStatus.sh; mode "default"
    bindsym Escape mode "default"
}

# Assign programs to workspace
assign [class="dota2"] 100:steam
assign [class="csgo_linux64"] 100:steam

# Set background to black
exec_always --no-startup-id xsetroot -solid "$inactiveBg"
exec_always --no-startup-id sleep 3 && $scripts/startup.sh
exec_always --no-startup-id sleep 3 && $scripts/disableAcceleration.sh
exec --no-startup-id /usr/bin/nm-applet # network applet
exec --no-startup-id seafile-applet
exec --no-startup-id sleep 3 && redshift-gtk
exec --no-startup-id sleep 5 && mpd && mpc repeat
exec --no-startup-id sleep 6 && mpdas
exec --no-startup-id xbacklight -set 100
exec --no-startup-id sleep 10; python3 $config/todoBot/main.py
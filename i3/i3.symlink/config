# Paths
set $config ~/projects/config
set $scripts ~/projects/config/scripts
set $startupScripts ~/projects/config/startupScripts
set $i3contexts python3 ~/projects/config/i3Contexts/switch.py
set $i3contextsServer bash ~/projects/config/i3Contexts/restartServer.sh

set $bg #000000
set $activeBg #000000
set $activeFont #fdf6e3
set $activeBorder #fdf6e3
set $inactiveBg #000000
set $inactiveFont #839496
set $activeWindowBorder #839496

# MISC
# Change font
font pango: Dejavu Sans Mono 12

# use windows as mod
set $mod Mod4

# Set background to black
exec --no-startup-id xsetroot -solid $inactiveBg

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
 
# Behaviour
focus_follows_mouse no

# kill focused window
bindsym Mod1+Q kill

# change focus
bindsym Mod1+h focus left
bindsym Mod1+j focus down
bindsym Mod1+k focus up
bindsym Mod1+l focus right
bindsym Mod1+a focus left
bindsym Mod1+d focus right

# move focused window
bindsym Mod1+Shift+h move left
bindsym Mod1+Shift+j move down
bindsym Mod1+Shift+k move up
bindsym Mod1+Shift+l move right

# split in horizontal orientation
bindsym $mod+o split h

# split in vertical orientation
bindsym $mod+p split v

# toggle split / tab mode
bindsym Mod1+e layout toggle splith tabbed

# Enable floating mode (popup style) for some applications
for_window [window_role="pop-up"] floating enable

# WORKSPACES

# Context switching hotkeys
# bindsym $mod+q exec $i3contexts context q
# bindsym $mod+w exec $i3contexts context w
# bindsym $mod+e exec $i3contexts context e
# bindsym $mod+r exec $i3contexts context r
# bindsym $mod+t exec $i3contexts context t
bindsym F1 exec $i3contexts context q
bindsym F2 exec $i3contexts context w
bindsym F3 exec $i3contexts context e
bindsym F4 exec $i3contexts context r
bindsym F5 exec $i3contexts context t

bindsym $mod+Shift+q exec $i3contexts context --move q
bindsym $mod+Shift+w exec $i3contexts context --move w
bindsym $mod+Shift+e exec $i3contexts context --move e
bindsym $mod+Shift+r exec $i3contexts context --move r
bindsym $mod+Shift+t exec $i3contexts context --move t
bindsym Shift+F1 exec $i3contexts context --move q
bindsym Shift+F2 exec $i3contexts context --move w
bindsym Shift+F3 exec $i3contexts context --move e
bindsym Shift+F4 exec $i3contexts context --move r
bindsym Shift+F5 exec $i3contexts context --move t

# Workspace switching hotkeys
bindsym $mod+a exec $i3contexts workspace a
bindsym $mod+s exec $i3contexts workspace s
bindsym $mod+d exec $i3contexts workspace d
bindsym $mod+f exec $i3contexts workspace f
bindsym $mod+g exec $i3contexts workspace g
bindsym $mod+less exec $i3contexts workspace <
bindsym $mod+y exec $i3contexts workspace y
bindsym $mod+x exec $i3contexts workspace x

# move focused container to workspace
bindsym $mod+Shift+a exec $i3contexts workspace --move a
bindsym $mod+Shift+s exec $i3contexts workspace --move s
bindsym $mod+Shift+d exec $i3contexts workspace --move d
bindsym $mod+Shift+f exec $i3contexts workspace --move f
bindsym $mod+Shift+g exec $i3contexts workspace --move g
bindsym $mod+Shift+less exec $i3contexts workspace --move <
bindsym $mod+Shift+y exec $i3contexts workspace --move y
bindsym $mod+Shift+x exec $i3contexts workspace --move x

# shared workspaces
bindsym $mod+v exec $i3contexts workspace music
bindsym $mod+c exec $i3contexts workspace chat
bindsym $mod+b exec $i3contexts workspace todo
bindsym $mod+m exec $i3contexts workspace mail

bindsym $mod+Shift+v exec $i3contexts workspace --move music
bindsym $mod+Shift+c exec $i3contexts workspace --move chat
bindsym $mod+Shift+b exec $i3contexts workspace --move todo
bindsym $mod+Shift+m exec $i3contexts workspace --move mail

# Move workspaces between monitors
bindsym $mod+space move workspace to output left

# Resize window
bindsym Mod1+o mode "resize"
mode "resize" {
    bindsym h resize grow left 10 px or 10 ppt
    bindsym Shift+H resize shrink   left 10 px or 10 ppt

    bindsym j resize grow down 10 px or 10 ppt
    bindsym Shift+J resize shrink   down 10 px or 10 ppt

    bindsym k resize grow up 10 px or 10 ppt
    bindsym Shift+K resize shrink   up 10 px or 10 ppt

    bindsym l resize grow right 10 px or 10 ppt
    bindsym Shift+L resize shrink   right 10 px or 10 ppt

    bindsym Escape mode "default"
}

# Shortcuts to Open Applications
# Open application launch mode.
set $launch Launch: [a]nki [c]hrome [k]illTimers [m]ail.google.com [n]autilus [t]elegram [z]otero t[o]doist [l]ockscreen [shift+r]estart [shift+e]xit [s]any other
bindsym Mod1+s mode "$launch"

mode "$launch" {
    # start dmenu (a program launcher)
    bindsym a exec ~/.bin/anki; mode "default"
    bindsym c exec $scripts/startChrome.sh; mode "default"
    bindsym k exec $scripts/timer/killtimers.sh; mode "default"
    bindsym l exec i3lock -c 000000; mode "default"
    bindsym m exec $scripts/startChrome.sh --new-window mail.google.com; mode "default"
    bindsym n exec nautilus --no-desktop; mode "default"
    bindsym o exec $scripts/startChrome.sh --new-window todoist.com; mode "default"
    bindsym s exec --no-startup-id dmenu_run -fn xft:inconsolata-12; mode "default"
    bindsym t exec /home/toni/.apps/Telegram/Telegram; mode "default"
    bindsym w exec $scripts/startChrome.sh --new-window web.whatsapp.com; mode "default"
    bindsym z exec /home/toni/.apps/Zotero_linux-x86_64/zotero; mode "default"
    bindsym shift+r restart; mode "default"
    bindsym Shift+E exit; mode "default"

    bindsym Escape mode "default"
}

client.focused_inactive    $inactiveFont   $inactiveBg            $inactiveFont
client.unfocused           $inactiveFont   $inactiveBg            $inactiveFont
client.focused             $activeFont     $activeWindowBorder    $activeFont
client.urgent              $activeFont     $activeWindowBorder    $activeFont

bar {
	colors {
		background $bg
		statusline #ffffff
		separator  $activeFont
		focused_workspace $activeBg $activeBg $activeFont
		active_workspace  $activeBg $activeBg $activeFont
		inactive_workspace $inactiveBg $inactiveBg $inactiveFont
		urgent_workspace  $activeBg $activeBg $activeFont
	}
    output primary
    output HDMI1
    output DP-1-3
    strip_workspace_numbers yes
    status_command i3status
    status_command i3blocks
}

# Second monitor bar
bar {
	colors {
		background $bg
		statusline #ffffff
		separator  #ffffff
		focused_workspace $activeBg $activeBg $activeFont
		active_workspace  $activeBg $activeBg $activeFont
		inactive_workspace $inactiveBg $inactiveBg $inactiveFont
		# urgent_workspace  #2f343a #900000 #6ABEE7
		# binding_mode #2f343a #900000 #6ABEE7
	}
    output eDP1
    output eDP-1
    strip_workspace_numbers yes
    status_command i3status
}

#Disable window titles
new_window 1pixel
for_window [class="^.*"] border pixel 1

# start a terminal. since on some systems terminator doesnt work and having multiple
# i3 configs is basically suicide, i put this here
# and then just put whatever terminal i want to open in ~/.bin/terminal.
# Not nice but it works
bindsym Mod1+w exec ~/.bin/terminal

# Reload monitors script and xmodmap. This is necessary when the power goes out for a second and my usb hub separates the keyboard from the computer, resetting the xmodmap :D
bindsym Mod1+Shift+o exec --no-startup-id zsh $startupScripts/runAll.sh

# Volume changing hotkeys
bindsym Ctrl+Shift+R exec --no-startup-id $scripts/changeVolume.sh 1
bindsym Ctrl+Shift+F exec --no-startup-id $scripts/changeVolume.sh 0
# Brightness changing hotkeys
bindsym Ctrl+Shift+B exec --no-startup-id $scripts/changeBrightness.sh 0

# Spotify controls
bindsym Ctrl+Shift+S exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym Ctrl+Shift+A exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym Ctrl+Shift+D exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

workspace "8:qa" output DP-1-3
workspace "8:qa" output HDMI1
workspace "14:qy" output eDP-1
workspace "14:qy" output eDP1

# Startup
exec_always --no-startup-id $i3ContextsServer
exec_always --no-startup-id sleep 3 && $startupScripts/runAll.sh
exec --no-startup-id /usr/bin/nm-applet # network applet
exec --no-startup-id ~/.dropbox-dist/dropboxd
exec --no-startup-id pulseaudio --start
exec --no-startup-id /opt/urserver/urserver --daemon
exec --no-startup-id sleep 3 && redshift-gtk
exec --no-startup-id $startupScripts/openProgramsAtStartOfSession.sh
